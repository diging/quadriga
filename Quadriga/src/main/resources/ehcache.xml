<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<defaultCache maxElementsInMemory="50" eternal="false"
		overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />

	<cache name="concepts" eternal="false" maxElementsInMemory="500"
		overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
		timeToLiveSeconds="3600" memoryStoreEvictionPolicy="LRU" /><!-- 24hrs = 86400 -->

	<cache name="statements" eternal="false" maxElementsInMemory="1000"
		overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
		timeToLiveSeconds="21600" memoryStoreEvictionPolicy="LRU" />

	<cache name="creationEvent" eternal="false" maxElementsInMemory="1000"
		overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
		timeToLiveSeconds="21600" memoryStoreEvictionPolicy="LRU" /> <!--  21600  -->
	
	<cache name="creationEvents" eternal="false" maxElementsInMemory="500"
        overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
        timeToLiveSeconds="21600" memoryStoreEvictionPolicy="LRU" /> <!--  21600  -->

	<cache name="appellationEvents" eternal="false"
		maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false"
		timeToIdleSeconds="0" timeToLiveSeconds="21600"
		memoryStoreEvictionPolicy="LRU" />

	<cache name="conceptSearch" eternal="false" maxElementsInMemory="2000"
		overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
		timeToLiveSeconds="21600" memoryStoreEvictionPolicy="LRU" />

	<cache name="publicNetworksStatus" eternal="false"
		maxElementsInMemory="1000" overflowToDisk="false" diskPersistent="false"
		timeToIdleSeconds="0" timeToLiveSeconds="86400"
		memoryStoreEvictionPolicy="LRU" />
		
	<cache name="transformedNetworks" eternal="false" maxElementsInMemory="50"
        overflowToDisk="false" diskPersistent="true" timeToIdleSeconds="0"
        timeToLiveSeconds="3600" memoryStoreEvictionPolicy="LRU" />
        
    <cache name="statementConcepts" eternal="false" maxElementsInMemory="2000"
        overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
        timeToLiveSeconds="43200" memoryStoreEvictionPolicy="LRU" /><!-- live 12 hours -->

</ehcache>
