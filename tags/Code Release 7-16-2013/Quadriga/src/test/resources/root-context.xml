	<bean id="ConceptCollectionManager"  class="edu.asu.spring.quadriga.service.impl.ConceptCollectionManager" />
	<bean id="searchConceptPowerURL" class="java.lang.String">
		<constructor-arg>
			<value>http://chps.asu.edu/conceptpower/rest/ConceptLookup/</value>
		</constructor-arg>
	</bean>
	<bean id="updateConceptPowerURL" class="java.lang.String">
		<constructor-arg>
			<value>http://chps.asu.edu/conceptpower/rest/Concept?id=</value>
		</constructor-arg>
