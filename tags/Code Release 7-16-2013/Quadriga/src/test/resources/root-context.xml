	<bean id="userFactory"
		class="edu.asu.spring.quadriga.domain.factories.impl.UserFactory">
	</bean>

	<bean
		class="edu.asu.spring.quadriga.domain.factories.impl.CollaboratorRoleFactory">
	</bean>

