	<bean 
	class="edu.asu.spring.quadriga.service.impl.workbench.CheckProjectSecurity">
	</bean>
	<bean
		class="edu.asu.spring.quadriga.domain.factories.impl.QuadrigaRoleFactory">
	</bean>
	
	<bean class="edu.asu.spring.quadriga.service.impl.QuadrigaRoleManager"></bean>

	<bean id="CollaboratorRole" class="edu.asu.spring.quadriga.domain.implementation.CollaboratorRole" />
	

