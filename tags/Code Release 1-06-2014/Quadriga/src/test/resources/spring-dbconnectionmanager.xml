<?xml version="1.0" encoding="UTF-8"?> 
 <beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	   
	   <!--  Concept Collection bean -->
	<bean id="DBConnectionModifyCCManagerBean" 
	    class="edu.asu.spring.quadriga.db.sql.conceptcollection.DBConnectionModifyCCManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	<bean id="DBConnectionCCCollaboratorManagerBean" 
	    class="edu.asu.spring.quadriga.db.sql.conceptcollection.DBConnectionCCCollaboratorManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	
	<bean id="DBConnectionWorkspaceDictionaryBean" class="edu.asu.spring.quadriga.db.sql.workspace.DBConnectionWorkspaceDictionary">
		<property name="dataSource" ref="dataSource" />
	</bean>	
	<bean id="DBConnectionWorkspaceCCBean" class="edu.asu.spring.quadriga.db.sql.workspace.DBConnectionWorkspaceCC">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- Workbench projects bean -->
	<bean id="DBConnectionModifyProjectManagerBean" class="edu.asu.spring.quadriga.db.sql.workbench.DBConnectionModifyProjectManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- Workbench workspace bean -->
		<bean id="DBConnectionArchiveWSMangerBean" class="edu.asu.spring.quadriga.db.sql.workspace.DBConnectionArchiveWSManger">
		<property name="dataSource" ref="dataSource" />
	</bean>
 
 	<bean id="DBConnectionRetrieveWSCollabManagerBean"
		class="edu.asu.spring.quadriga.db.sql.workspace.DBConnectionRetrieveWSCollabManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!--  Hibernate session factory injection -->
	<bean id = "transactionManager" class = "org.springframework.orm.hibernate4.HibernateTransactionManager">
    	<property name = "sessionFactory" ref = "sessionFactory" />
	</bean>		
	
 <bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">

		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/quad_test" />
		<property name="username" value="dbadmin" />
		<property name="password" value="dbadmin" />
	</bean>
</beans>